{
  "name": "eunsun-family-infra",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --dir backend start:dev",
    "build": "pnpm --dir backend build",
    "start": "pnpm --dir backend start",
    "start:prod": "pnpm --dir backend start:prod",
    "lint": "pnpm --dir backend lint",
    "check": "pnpm --dir backend check",
    "test": "pnpm --dir backend test",
    "backend:dev": "pnpm --filter backend start:dev",
    "backend:install": "pnpm --filter backend install",
    "app:start": "pnpm --filter frontend-app start",
    "app:install": "pnpm --filter frontend-app install --force",
    "admin:dev": "pnpm --filter frontend-web-admin dev",
    "admin:build": "pnpm --filter frontend-web-admin build",
    "admin:start": "pnpm --filter frontend-web-admin start",
    "prisma:generate": "pnpm --dir backend prisma:generate",
    "prisma:migrate": "pnpm --dir backend prisma:migrate",
    "prisma:studio": "pnpm --dir backend prisma:studio",
    "build-ecs": "./scripts/build.sh",
    "deploy-ecs": "./scripts/deploy.sh",
    "deploy": "pnpm build-ecs && pnpm deploy-ecs"
  }
}
